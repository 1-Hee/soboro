<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    >

    <!--    로그인 전체 폼 -->
    <LinearLayout
        android:id="@+id/loginForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <!--  폼 밑 아이템들 -->
        <!--  아이디 입력 폼 -->
        <LinearLayout
            android:id="@+id/idItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loginIdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="아이디"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/loginIdInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="아이디를 입력해주세요"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/loginIdGuideText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_700"
                android:textSize="0dp"
                android:visibility="invisible" />

        </LinearLayout>
        <!--  비밀번호 입력 폼 -->
        <LinearLayout
            android:id="@+id/passwordItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loginPasswordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="비밀번호"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/loginPwdInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                />

            <TextView
                android:id="@+id/loginPwdGuideText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_700"
                android:textSize="0dp"
                android:visibility="invisible" />
        </LinearLayout>
        <!--  로그인 입력창 하단 옵션  -->
        <LinearLayout
            android:id="@+id/userRegisterAuthOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원가입"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/findId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="아이디찾기"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/findPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="비밀번호 찾기"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_primary_btn"
            android:text="로그인"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>