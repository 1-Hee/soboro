<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.soboro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/http_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Soboro"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activity.GuideActivity"
            android:exported="false" />
        <activity
            android:name=".activity.regist.SoboroPrivacyStatementActivity"
            android:exported="false" />
        <activity
            android:name=".activity.regist.SoboroUseOfTermActivity"
            android:exported="true" />
        <activity
            android:name=".activity.member.ProfileModifyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.member.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activity.history.HistoryDetailActivity"
            android:exported="false" />
        <activity
            android:name=".activity.history.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.voice.VoiceTranslationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.voice.VoicePracticeAcitivty"
            android:exported="false" />
        <activity
            android:name=".activity.regist.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.regist.FindPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activity.regist.FindIdActivity"
            android:exported="false" />
        <activity
            android:name=".activity.regist.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>